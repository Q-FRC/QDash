!include "FileFunc.nsh"
!include "LogicLib.nsh"
!include "MUI2.nsh"

Unicode true

Name "QDash"
InstallDir "$LOCALAPPDATA\Programs\QDash"
InstallDirRegKey HKCU "Software\QDash" "InstallDir"
RequestExecutionLevel user
OutFile "../../QDash-Setup.exe"

!define MUI_ICON "../../dist/QDash.ico"

;--------------------------------

; Pages

!insertmacro MUI_PAGE_WELCOME
!define MUI_COMPONENTSPAGE_NODESC
!insertmacro MUI_PAGE_COMPONENTS
!insertmacro MUI_PAGE_DIRECTORY
!insertmacro MUI_PAGE_INSTFILES
!define MUI_FINISHPAGE_RUN "$InstDir\QDash.exe"
!insertmacro MUI_PAGE_FINISH

!insertmacro MUI_UNPAGE_CONFIRM
!insertmacro MUI_UNPAGE_INSTFILES

;--------------------------------

; Languages

!insertmacro MUI_LANGUAGE "English"

;--------------------------------

; Version info
VIProductVersion "@QDASH_VERSION_WIN@"
VIFileVersion "@QDASH_VERSION_WIN@"
VIAddVersionKey /LANG=${LANG_ENGLISH} "ProductName" "QDash"
VIAddVersionKey /LANG=${LANG_ENGLISH} "FileDescription" "QDash Installer"
VIAddVersionKey /LANG=${LANG_ENGLISH} "LegalCopyright" "crueter"
VIAddVersionKey /LANG=${LANG_ENGLISH} "FileVersion" "@QDASH_TAG@"
VIAddVersionKey /LANG=${LANG_ENGLISH} "ProductVersion" "@QDASH_TAG@"

;--------------------------------

; The stuff to install
Section "QDash"

  SectionIn RO

  nsExec::Exec /TIMEOUT=2000 'TaskKill /IM QDash.exe /F'

  SetOutPath $INSTDIR

  File "QDash.exe"
  File *.dll
  File /r "imageformats"
  File /r "platforms"
  File /r "tls"
  File /r "multimedia"
  File /r "qml"

  ; Write the installation path into the registry
  WriteRegStr HKCU Software\QDash "InstallDir" "$INSTDIR"

  ; Write the uninstall keys for Windows
  ${GetParameters} $R0
  ${GetOptions} $R0 "/NoUninstaller" $R1
  ${If} ${Errors}
    !define UNINST_KEY "Software\Microsoft\Windows\CurrentVersion\Uninstall\QDash"
    WriteRegStr HKCU "${UNINST_KEY}" "DisplayName" "QDash"
    WriteRegStr HKCU "${UNINST_KEY}" "DisplayIcon" "$INSTDIR\QDash.exe"
    WriteRegStr HKCU "${UNINST_KEY}" "UninstallString" '"$INSTDIR\uninstall.exe"'
    WriteRegStr HKCU "${UNINST_KEY}" "QuietUninstallString" '"$INSTDIR\uninstall.exe" /S'
    WriteRegStr HKCU "${UNINST_KEY}" "InstallLocation" "$INSTDIR"
    WriteRegStr HKCU "${UNINST_KEY}" "Publisher" "QDash Contributors"
    WriteRegStr HKCU "${UNINST_KEY}" "Version" "@QDASH_TAG@"
    WriteRegStr HKCU "${UNINST_KEY}" "DisplayVersion" "@QDASH_TAG@"
    WriteRegStr HKCU "${UNINST_KEY}" "VersionMajor" "@QDASH_VERSION_MAJOR@"
    WriteRegStr HKCU "${UNINST_KEY}" "VersionMinor" "@QDASH_VERSION_MINOR@"
    ${GetSize} "$INSTDIR" "/S=0K" $0 $1 $2
    IntFmt $0 "0x%08X" $0
    WriteRegDWORD HKCU "${UNINST_KEY}" "EstimatedSize" "$0"
    WriteRegDWORD HKCU "${UNINST_KEY}" "NoModify" 1
    WriteRegDWORD HKCU "${UNINST_KEY}" "NoRepair" 1
    WriteUninstaller "$INSTDIR\uninstall.exe"
  ${EndIf}

SectionEnd

Section "Start Menu Shortcut" SM_SHORTCUTS

  CreateShortcut "$SMPROGRAMS\QDash.lnk" "$INSTDIR\QDash.exe" "" "$INSTDIR\QDash.exe" 0

SectionEnd

Section /o "Desktop Shortcut" DESKTOP_SHORTCUTS

  CreateShortcut "$DESKTOP\QDash.lnk" "$INSTDIR\QDash.exe" "" "$INSTDIR\QDash.exe" 0

SectionEnd

;--------------------------------

; Uninstaller

Section "Uninstall"

  nsExec::Exec /TIMEOUT=2000 'TaskKill /IM QDash.exe /F'

  DeleteRegKey HKCU "Software\Microsoft\Windows\CurrentVersion\Uninstall\QDash"
  DeleteRegKey HKCU SOFTWARE\QDash

  Delete $INSTDIR\QDash.exe
  Delete $INSTDIR\qt.conf
  Delete $INSTDIR\*.dll

  Delete $INSTDIR\uninstall.exe

  RMDir /r $INSTDIR\iconengines
  RMDir /r $INSTDIR\imageformats
  RMDir /r $INSTDIR\platforms
  RMDir /r $INSTDIR\styles

  Delete "$SMPROGRAMS\QDash.lnk"
  Delete "$DESKTOP\QDash.lnk"

  RMDir "$INSTDIR"

SectionEnd

;--------------------------------

; Extra command line parameters

Function .onInit
${GetParameters} $R0
${GetOptions} $R0 "/NoShortcuts" $R1
${IfNot} ${Errors}
${OrIf} ${FileExists} "$InstDir\QDash.exe"
  !insertmacro UnselectSection ${SM_SHORTCUTS}
  !insertmacro UnselectSection ${DESKTOP_SHORTCUTS}
${EndIf}
FunctionEnd
